<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-right" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Contact Us</title>
    </head>
    <body>
        <referenceContainer name="sidebar.additional">
            <block name="contact-sidebar" template="Magento_Contact::sidebar.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Shop\CustomModule\ViewModel\WorkingViewModel</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="columns">
            <block name="contact-sidebar-note" template="Magento_Contact::sidebar-note.phtml" />
        </referenceContainer>

        <referenceBlock name="wishlist_sidebar" remove="true" />
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
    </body>
</page>
