<script>
    document.querySelector('.product-container').addEventListener('click', function(e) {

        const isBtn = e.target.matches("[data-product-link]");
        const isSubmit = e.target.matches('[type=submit]')
        if (!isBtn) {
            return
        }

        console.log(e.target.dataset.productLink)
        if (e.target.dataset.productLink !== "0") {
            document.querySelector("#product-options-wrapper").style.visibility = 'hidden'
            document.querySelector(".product-contact").classList.add('pd-t');
        } else {
            document.querySelector("#product-options-wrapper").style.visibility = ''
            document.querySelector(".product-contact").classList.remove('pd-t');
        }
        e.preventDefault();
        const descriptions = [...document.querySelectorAll('.product-descriptions')]
        descriptions.forEach((el) => el.classList.remove('active'));
        descriptions[e.target.dataset.productLink].classList.add('active')
        document.querySelector('.product-controls__tab.active').classList.remove('active')
        e.target.classList.add('active')
    })
</script>